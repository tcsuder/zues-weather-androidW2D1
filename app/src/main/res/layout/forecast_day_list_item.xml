<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherIconImageView"
        android:src="@drawable/icon"
        android:scaleType="centerCrop"
        android:layout_margin="4dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forecastDayTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Forecast Day"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Main"
            android:id="@+id/weatherDescriptionTextView"
            android:layout_below="@+id/restaurantNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Description"
            android:id="@+id/weatherDescriptionTextView"
            android:layout_below="@+id/restaurantNameTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max"
            android:id="@+id/maxTempTextView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_alignRight="@+id/tempNumberTextView"
            android:layout_alignEnd="@+id/tempNumberTextView"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/minTempTextView"
            android:layout_alignLeft="@+id/tempNumberTextView"
            android:layout_alignStart="@+id/tempNumberTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min"
            android:id="@+id/minTempTextView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/tempMinNumberTextView"
            android:layout_alignStart="@+id/tempMinNumberTextView"
            android:layout_alignRight="@+id/tempMinNumberTextView"
            android:layout_alignEnd="@+id/tempMinNumberTextView"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind"
            android:id="@+id/windTextView"
            android:layout_alignTop="@+id/minTempTextView"
            android:layout_alignRight="@+id/windSpeedTextView"
            android:layout_alignEnd="@+id/windSpeedTextView"
            android:layout_alignLeft="@+id/windSpeedTextView"
            android:layout_alignStart="@+id/windSpeedTextView"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tempMaxNumberTextView"
            android:layout_below="@+id/maxTempTextView"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tempNumberTextView"
            android:layout_below="@+id/maxTempTextView"
            android:layout_marginLeft="20dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tempMinNumberTextView"
            android:layout_below="@+id/minTempTextView"
            android:layout_centerHorizontal="true"
            android:textAlignment="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/windSpeedTextView"
            android:layout_below="@+id/windTextView"
            android:layout_toRightOf="@+id/tempMinNumberTextView"
            android:layout_toEndOf="@+id/tempMinNumberTextView"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>